apiVersion: longhorn.io/v1beta1
kind: Node
metadata:
  finalizers:
  - longhorn.io
  name: {{ .NodeName }}
  namespace: longhorn-system
spec:
  allowScheduling: true
  disks:
    default-disk-CM-1:
      allowScheduling: true
      evictionRequested: false
      path: /var/lib/longhorn/
#      storageReserved: 9310691328
      tags: null
  engineManagerCPURequest: 0
  evictionRequested: false
  name: {{ .NodeName }}
  replicaManagerCPURequest: 0
  tags:
  - {{ .ZoneName }}
